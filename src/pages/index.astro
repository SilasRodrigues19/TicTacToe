---
import Layout from '../layouts/Layout.astro';
import Square from '../components/Square.astro';

interface Props {
  TIC_TAC_TOE_SQUARES: number;
}

const { TIC_TAC_TOE_SQUARES = 9 } = Astro.props;
---

<Layout title="Tic Tac Toe.">
	<main class="min-h-screen h-full w-full flex justify-center items-center">
		<section class="bg-gray-900 rounded-lg shadow-lg p-12">
				<h1 class="text-4xl text-white mb-6 text-center">Tic Tac Toe</h1>
				<h2 class="text-2xl text-white mb-6 text-center" id="playing-with">Playing against human</h2>
				<div class="grid grid-cols-3 gap-4 mb-6">
						{ 
							Array.from({ length: TIC_TAC_TOE_SQUARES }).map((_, index) => <Square key={index} />)
						}
				</div>
				<p id="status" class="text-white text-2xl mb-4"></p>
				<div class="flex items-center justify-center gap-4 w-full">
					<button id="play-ia-btn" class="flex items-center justify-evenly bg-green-500 w-full h-12 text-white rounded-lg px-4 py-2 hover:bg-green-600 transition-colors duration-200 focus:ring-4 focus:outline-none focus:ring-green-800">
						<svg class="" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path fill="currentColor" d="M22 14h-1c0-3.87-3.13-7-7-7h-1V5.73A2 2 0 1 0 10 4c0 .74.4 1.39 1 1.73V7h-1c-3.87 0-7 3.13-7 7H2c-.55 0-1 .45-1 1v3c0 .55.45 1 1 1h1v1a2 2 0 0 0 2 2h14c1.11 0 2-.89 2-2v-1h1c.55 0 1-.45 1-1v-3c0-.55-.45-1-1-1M9.79 16.5C9.4 15.62 8.53 15 7.5 15s-1.9.62-2.29 1.5c-.13-.31-.21-.64-.21-1a2.5 2.5 0 0 1 5 0c0 .36-.08.69-.21 1m9 0c-.39-.88-1.29-1.5-2.29-1.5s-1.9.62-2.29 1.5c-.13-.31-.21-.64-.21-1a2.5 2.5 0 0 1 5 0c0 .36-.08.69-.21 1Z"/></svg>
					</button>
					<button id="play-people-btn" class="flex items-center justify-evenly bg-green-500 w-full h-12 text-white rounded-lg px-4 py-2 hover:bg-green-600 transition-colors duration-200 focus:ring-4 focus:outline-none focus:ring-green-800">
						<svg class="" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path fill="currentColor" d="m10.8 15.9l4.67-3.5c.27-.2.27-.6 0-.8L10.8 8.1a.5.5 0 0 0-.8.4v7c0 .41.47.65.8.4zM12 2C6.48 2 2 6.48 2 12s4.48 10 10 10s10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8s8 3.59 8 8s-3.59 8-8 8z"/></svg>
					</button>
				</div>
				<button id="reset-btn" class="mt-4 border-2 border-green-500 w-full h-12 text-white rounded-lg px-4 py-2 hover:bg-green-600 transition-colors duration-200 focus:ring-4 focus:outline-none focus:ring-green-800">
					Reset
				</button>
		</section>
	</main>
</Layout>